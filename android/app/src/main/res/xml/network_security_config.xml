<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- ðŸ”’ Default: disallow cleartext HTTP -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Use system trusted CAs (includes Let's Encrypt) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- âœ… Allow your production HTTPS domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">moolacarb.com</domain>
    </domain-config>

    <!-- âœ… Allow HTTPS images from singaporeanmalaysianrecipes.com -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">www.singaporeanmalaysianrecipes.com</domain>
    </domain-config>

    <!-- ðŸ§ª Optional: keep local cleartext for dev -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator localhost -->
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">localhost</domain>
    </domain-config>
</network-security-config>
